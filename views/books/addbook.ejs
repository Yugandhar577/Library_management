<main class="container">
    <h1 class="page-title">Add New Book</h1>

    <section class="retro-window card--padded" aria-labelledby="addbook-title">
        <div class="window-title" id="addbook-title">Book Details</div>
        <div class="window-body">
            <form action="/books" method="POST" class="book-form">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="book[title]" required class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" id="author" name="book[author]" required class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" id="genre" name="book[genre]" class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="publisher">Publisher</label>
                    <input type="text" id="publisher" name="book[publisher]" class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="edition">Edition</label>
                    <input type="text" id="edition" name="book[edition]" class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="price">Price (â‚¹)</label>
                    <input type="number" id="price" name="book[price]" step="0.01" class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="totalCopies">Total Copies</label>
                    <input type="number" id="totalCopies" name="book[totalCopies]" min="1" required class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="availableCopies">Available Copies</label>
                    <input type="number" id="availableCopies" name="book[availableCopies]" min="0" required class="retro-input" />
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="book[description]" rows="3" class="retro-input"></textarea>
                </div>

                <div class="form-actions" style="margin-top:1rem;">
                    <button type="submit" class="btn-success">ðŸ’¾ Save</button>
                    <a href="/allbooks" class="retro-btn">Cancel</a>
                </div>
            </form>
        </div>
    </section>
</main>