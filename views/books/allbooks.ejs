<main>
  <div class="dashboard">
    <h1 class="retro-title text-center mb-4">Library Book Catalog</h1>

    <!-- Add Book Button -->
    <div class="text-end mb-3" style="margin-bottom: 1rem;">
      <a href="/books/addbook" class="retro-btn">
        Add New Book
      </a>
    </div>

    <div class="toolbar mb-4">
      <input type="text" id="searchBar" placeholder="Search books..." />

      <!-- Status filter -->
      <!-- Optional: sort dropdown -->
      <select id="sortBy">
        <option value="">Sort by</option>
        <option value="title">Title</option>
        <option value="author">Author</option>
      </select>
    </div>

    <!-- Books Grid -->
    <div class="books-grid">
      <% if (allBooks.length === 0) { %>
        <div class="text-center">
          <p class="text-muted fs-5">No books available in the catalog.</p>
        </div>
      <% } else { %>
        <% allBooks.forEach(book => { %>
          <div class="book-card">
            <div class="book-info-left">
              <h3><%= book.title %></h3>
              <p><strong>Author:</strong> <%= book.author || "—" %></p>
              <p><strong>Genre:</strong> <%= book.genre || "—" %></p>
              <p><strong>Publisher:</strong> <%= book.publisher || "—" %></p>
              <p><strong>Edition:</strong> <%= book.edition || "—" %></p>
              <p><strong>Price:</strong> ₹<%= book.price ? book.price.toFixed(2) : "0.00" %></p>
              <p>
                <strong>Available:</strong> 
                <span class="<%= book.availableCopies > 0 ? 'status green' : 'status red' %>">
                  <%= book.availableCopies %>
                </span> / <%= book.totalCopies %>
              </p>
              <p><%= book.description ? book.description.substring(0, 100) + (book.description.length > 100 ? '...' : '') : "—" %></p>
            </div>

            <div class="book-info-right">
              <a href="/books/<%= book._id %>" class="retro-btn" style="margin-bottom:0.5rem;">View</a>
              <a href="/books/<%= book._id %>/edit" class="retro-btn" style="margin-bottom:0.5rem;">Edit</a>
              <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display:block;">
                <button class="retro-btn" onclick="return confirm('Delete this book permanently?')">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</main>
