<main>
<div class="dashboard">
  <h2 class="retro-title">Edit Book</h2>

  <div class="retro-window card--padded"></div>
    <div class="window-title">Book Details</div>
    <div class="window-body">
      <form action="/books/<%= book._id %>?_method=PUT" method="POST"></form>
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="book[title]"
            value="<%= book.title %>"
            required
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          <input
            type="text"
            id="author"
            name="book[author]"
            value="<%= book.author %>"
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="genre">Genre</label>
          <input
            type="text"
            id="genre"
            name="book[genre]"
            value="<%= book.genre %>"
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="publisher">Publisher</label>
          <input
            type="text"
            id="publisher"
            name="book[publisher]"
            value="<%= book.publisher %>"
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="edition">Edition</label>
          <input
            type="text"
            id="edition"
            name="book[edition]"
            value="<%= book.edition %>"
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="price">Price (â‚¹)</label>
          <input
            type="number"
            step="0.01"
            id="price"
            name="book[price]"
            value="<%= book.price %>"
            class="retro-input"
          />
        </div>

        <div class="form-group">
          <label for="totalCopies">Total Copies</label>
          <input
            type="number"
            id="totalCopies"
            name="book[totalCopies]"
            value="<%= book.totalCopies %>"
            class="retro-input"
            min="1"
            required
          />
        </div>

        <div class="form-group">
          <label for="availableCopies">Available Copies</label>
          <input
            type="number"
            id="availableCopies"
            name="book[availableCopies]"
            value="<%= book.availableCopies %>"
            class="retro-input"
            min="0"
            required
          />
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            id="description"
            name="book[description]"
            rows="4"
            class="retro-input"
          ><%= book.description %></textarea>
        </div>

        <div class="form-actions" style="margin-top:1rem;">
          <button type="submit" class="btn-success">Update Book</button>
          <a href="/allbooks" class="retro-btn" style="background: #b22222; margin-left: 1rem;">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
</main>