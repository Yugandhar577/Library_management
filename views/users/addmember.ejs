<main>
    <div class="book-form">
        <h1>Add New Member</h1>
        <form action="/users" method="POST">
            
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="member[name]" required class="retro-input" />
            </div>

            <div class="form-group">
                <label for="memberId">Member ID</label>
                <input type="number" id="memberId" name="member[memberId]" required class="retro-input" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="member[email]" required class="retro-input" />
            </div>

            <div class="form-group">
                <label for="membershipType">Membership Type</label>
                <select id="membershipType" name="member[membershipType]" required class="retro-input">
                    <option value="Standard">Standard</option>
                    <option value="Premium">Premium</option>
                    <option value="Student">Student</option>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-success">ğŸ’¾ Save</button>
                <a href="/allMembers" class="retro-btn">Cancel</a>
            </div>
        </form>
    </div>
</main>
